--- a/mplayer.c
+++ b/mplayer.c
@@ -3053,7 +3053,7 @@ int main(int argc, char *argv[])
             if (menu_init(mpctx, menu_cfg))
                 mp_msg(MSGT_CPLAYER, MSGL_V, "Menu initialized: %s\n", menu_cfg);
             else {
-                if (menu_init(mpctx, MPLAYER_CONFDIR "/menu.conf"))
