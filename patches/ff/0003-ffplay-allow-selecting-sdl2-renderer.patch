Subject: [PATCH 3/9] ffplay: allow selecting sdl2 renderer

by setting SDL_VIDEO_RENDER environment variable
---
 fftools/ffplay.c | 3 +++
 1 file changed, 3 insertions(+)

diff --git a/fftools/ffplay.c b/fftools/ffplay.c
index fc7e1c2fb1..896717be6c 100644
--- a/fftools/ffplay.c
+++ b/fftools/ffplay.c
@@ -3717,6 +3717,7 @@ int main(int argc, char **argv)
 
     if (!display_disable) {
         int flags = SDL_WINDOW_HIDDEN;
+        const char *video_renderer = getenv("SDL_VIDEO_RENDER");
         if (alwaysontop)
 #if SDL_VERSION_ATLEAST(2,0,5)
             flags |= SDL_WINDOW_ALWAYS_ON_TOP;
@@ -3733,6 +3734,8 @@ int main(int argc, char **argv)
 #endif
         window = SDL_CreateWindow(program_name, SDL_WINDOWPOS_UNDEFINED, SDL_WINDOWPOS_UNDEFINED, default_width, default_height, flags);
         SDL_SetHint(SDL_HINT_RENDER_SCALE_QUALITY, "linear");
+        if (video_renderer)
+            SDL_SetHint(SDL_HINT_RENDER_DRIVER, video_renderer);
         if (window) {
             renderer = SDL_CreateRenderer(window, -1, SDL_RENDERER_ACCELERATED | SDL_RENDERER_PRESENTVSYNC);
             if (!renderer) {
